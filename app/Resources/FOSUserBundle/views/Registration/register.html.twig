{% extends '::base.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}

{% form_theme form '::app_forms.html.twig' %}

{% block body %}
    <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="post"
          class="fos_user_registration_register">
        {{ form_widget(form) }}
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="{{ 'registration.submit'|trans }}"/>
        </div>
    </form>
    <p>You already have an account ? <a href="{{ path('fos_user_security_login') }}">Sign in now !</a></p>
{% endblock %}
